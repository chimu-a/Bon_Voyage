<div class="container pt-5">
  <div class="row pt-5">
    <div class="col-md-4">
      <h3><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h3>
        <table class='table'>
          <tbody>
            <tr>
              <td>会員ID</th>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td>ユーザーネーム</td>
              <td><%= @customer.user_name %></td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>
            <tr>
              <td>カナ</td>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <td>自己紹介</td>
              <td><%= @customer.self_introduction %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td><%#= @customer.is_deleted ? 'text-gray' : 'text-green' %><%= @customer.is_deleted ? '退会済み' : '有効' %></td>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-outline-secondary btn-block" %>
        </div>
      　<div class="row">
          <%= link_to "コメントした投稿一覧を見る", comments_admin_customer_path(@customer.id), class:"btn btn-outline-warning btn-block" %>
        </div>
    </div>
    <div class="col-md-7 offset-md-1">
      <h3>投稿一覧</h3>
        <table class="table">
          <thead>
            <tr>
              <th>画像</th>
              <th>タイトル</th>
              <th>タグ</th>
              <th coldpan="3"></th>
            </tr>
          </thead>
          <% @posts.each do |post| %>
          <tbody>
            <tr>
              <td><%= link_to image_tag(post.get_image, size: "100x100"), admin_post_path(post) %> </td>
              <td><%= link_to post.title, admin_post_path(post), class: "link text-secondary" %></td>
              <td>
              　   <% post.tags.each do |tag| %>
                    <i class="fa-sharp fa-solid fa-tag"></i>
                      <%= link_to tag.name, admin_posts_path(tag_id: tag.id), class: "link text-secondary" %>
                  <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
        <%= paginate @posts %>
    </div>
  </div>
</div>