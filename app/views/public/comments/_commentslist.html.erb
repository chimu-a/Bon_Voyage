<% post_item.comments.each do |comment| %>
<p><%#= image_tag comment.customer.get_profile_image(100,100) %>
  <%= comment.customer.user_name %>
  <%#= link_to comment.customer.user_name, customer_path(post.customer.id), class: "link text-secondary" %>
  <%= comment.created_at.strftime('%Y/%m/%d') %>
  <%= comment.content %>
  <% if comment.customer == current_customer %>
    <%= link_to "削除", post_item_comment_path(post_item.id, comment.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-outline-danger", remote: true, data: {"turbolinks" => false} %>
  <% end %>
<% end %>
</p>