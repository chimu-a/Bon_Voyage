<div class="container pt-5">
  <div class="row pt-5">
    <h2>いいねした投稿一覧</h2>
  </div>
  <div class="row m-2">
    <% if @customer.favorites.empty? %>
      <div class="col-md-12 mr-5">
        <p>いいねした投稿はありません</p>
      </div>
    <% else %>
      <% @customer.favorites.each do |favorite| %>
      <div class="col-6 col-md-3" >
        <p><%= link_to image_tag( favorite.post.get_mini_image, class: "img-fluid" ), post_path(favorite.post.id) %></p>
        <p>
          <%= link_to favorite.post.customer.user_name, customer_path(favorite.post.customer.id), class:"link text-secondary" %>
          <i class="fa fa-heart unlike-btn"></i>
          <%= favorite.post.favorites.length %>
          <%= link_to favorite.post.title, post_path(favorite.post.id), class:"link text-secondary" %>
        </p>
      </div>
      <% end %>
    <% end %>
  </div>
</div>