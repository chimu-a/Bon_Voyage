<p>いいねした投稿一覧</p>
<% @customer.favorites.each do |favorite| %>
<%= link_to image_tag( favorite.post.image, size: "100x100" ), post_path(favorite.post.id) %>
<%= link_to favorite.post.customer.user_name, customer_path(favorite.post.customer.id) %>
<i class="fa fa-heart unlike-btn"></i>
<%= favorite.post.favorites.length %>
<%= link_to favorite.post.title, post_path(favorite.post.id) %>
<% end %>