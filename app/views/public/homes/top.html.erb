            　<!--  <%# post.tags.each do |tag| %>-->
             <!--   <i class="fa-sharp fa-solid fa-tag"></i>-->
             <!--     <%#= link_to tag.name, posts_path(tag_id: tag.id) %>-->
             <!--  <%# end %>-->
             <!--</p>-->
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
