<div class="container pt-5">
  <div class="text-center pt-5">
  　<p></p>
  　　<%= image_tag("40D49F7D-D011-4FDD-BCA3-CF9011501223_1_201_a.jpg", size: "500x250") %>
　</div>

  <div class="row">
    <div class="col-lg">
      <% if signed_in? %>
        <%= form_tag(search_path, method: :get) do %>
        <div class="input-group">
          <%= text_field_tag :keywords, params[:keywords], class: "form-control", placeholder: "キーワード・タグ・都道府県など、複数項目検索も可" %>
          <button class="btn btn-outline-info" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </div>
        <% end %>
      <% end %>

      <div class="pt-3">
       <%= render "public/posts/posts", post_count: @post_count, posts: @posts %>
      </div>
    </div>
  </div>
</div>
<%= paginate @posts %>