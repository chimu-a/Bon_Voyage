<div class="container pt-5">
  <div class="text-center pt-5">
  <p></p>
  <%= image_tag("40D49F7D-D011-4FDD-BCA3-CF9011501223_1_201_a.jpg", size: "500x250") %>
</div>

  <div class="row">
    <div class="col-lg">
      <% if signed_in? %>
        <%= form_tag(search_path, method: :get) do %>
        <div class="input-group">
          <%= text_field_tag :keywords, params[:keywords], class: "form-control", placeholder: "キーワード・タグ・都道府県など" %>
          <button class="btn btn-outline-info" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </div>
        <% end %>
      <% end %>

      <div class="pt-3">
        <% if signed_in? %>
          <h2>投稿一覧
          <!--(全<%#= @posts.count %>件)-->
          <%= link_to "新規投稿", new_post_path, class:"btn btn-outline-primary" %></h2>
        <% else %>
          <h2>投稿一覧</h2>
          <!--(全<%#= @posts.count %>件)-->
        <% end %>
        <div class="row m-2">
          <% @posts.each do |post| %>
            <div class="col-lg-3">
              <% if signed_in? %>
                <div class = style="outline-color:#b0c4de"><%= link_to image_tag(post.image, width: "150", height: "150"), post_path(post) %></div>
              <% else %>
                <div  class = style="outline-color:#b0c4de"><%= image_tag(post.image, width: "150", height: "150") %></div>
              <% end %>
              <tr>
                <td><%= post.title %></td>
                  <% if signed_in? %>
                    <td><%= link_to post.customer.user_name, customer_path(post.customer), class: "link text-secondary" %></td>
                  <% else %>
                    <%= post.customer.user_name %>
                  <% end %>
              </tr>
              <% if signed_in? %>
                <p>
                　<% post.tags.each do |tag| %>
                    <i class="fa-sharp fa-solid fa-tag"></i>
                      <%= link_to tag.name, posts_path(tag_id: tag.id), class: "link text-secondary" %>
                  <% end %>
                </p>
              <% end %>
