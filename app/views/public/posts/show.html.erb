<h1>Public::Posts#show</h1>
<p>Find me in app/views/public/posts/show.html.erb</p>

<div>
  <%= flash[:success] %>
</div>

<div class="container">
  <h2>投稿詳細</h2>
    <div class="row">
      <div class="col-sm" >
    　　<%= image_tag @post.image, size: "300x200" %>
    　</div>
    　<div class="col-sm" >
      　<table class="table">
      　   <tr>
      　     <td>タイトル</td>
        　  <td><%= @post.title %></td>
        　</tr>
        　<tr>
        　  <td>日付</td>
        　  <td><%= @post.date %>〜<%= @post.date %></td>
        　</tr>
        　<tr>
        　  <td>タグ</td>
        　  <% @post_tags.each do |tag| %>
     　　 <td> <i class="fa-sharp fa-solid fa-tag"></i>
        <%= link_to tag.name,search_tag_path(tag_id: tag.id) %></td>
      <% end %>
        　</tr>
      <% @post.post_items.each do |post_items| %>
       <tr>
      　     <td>画像</td>
        <td><%= image_tag post_items.image, size: "300x200" %></td>
       </tr>
       <tr>
        <td>場所</td>
        <td><%= post_items.place %></td>
        </tr>
        <tr>
        <td>コメント</td>
        <td><%= post_items.explanatory_text %></td>
        </tr>
        </div>
      <% end %>
        </table>
      </div>
    </div>
</div>
<div class="text-center"><%= link_to "編集する", edit_post_path(@post), class:"btn btn-success" %></div>

