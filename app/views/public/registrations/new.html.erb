<div class="row">
      <div class="col-3 offset-md-1"><%= f.label "ユーザーネーム" %></div>
      <div class="col-3"><%= f.text_field :user_name, :size => "10", placeholder: "みちこ" %></div>
    </div>
<div class="row">
      <div class="col-2 offset-md-1"><%= f.label "氏名" %></div>
      <div class="col-1 text-right pr-0"><%= f.label "(姓)" %></div>
      <div class="col-1"><%= f.text_field :last_name, :size => "10", placeholder: "令和" %></div>
      <div class="col-1 text-right pr-0"><%= f.label "(名)" %></div>
      <div class="col-1"><%= f.text_field :first_name, :size => "10", placeholder: "道子" %></div>
    </div>
    <div class="row">
      <div class="col-2 offset-md-1"><%= f.label "フリガナ" %></div>
      <div class="col-1 text-right pr-0"><%= f.label "(セイ)" %></div>
      <div class="col-1"><%= f.text_field :last_name_kana, :size => "10", placeholder: "レイワ" %></div>
      <div class="col-1 text-right pr-0"><%= f.label "(メイ)" %></div>
      <div class="col-1"><%= f.text_field :first_name_kana, :size => "10", placeholder: "ミチコ" %></div>
    </div>
    <div class="row">
      <div class="col-3 offset-md-1"><%= f.label "メールアドレス" %></div>
      <div class="col-3"><%= f.email_field :email, :size => "25", placeholder: "sample@example.com" %></div>
    </div>
    <div class="row">
      <div class="col-3 offset-md-1">
        <% if @minimum_password_length %>
          <%= f.label "パスワード(#{@minimum_password_length}文字以上)" %>
        <% end %>
      </div>
      <div class="col-3"><%= f.password_field :password %></div>
    </div>
    <div class="row">
      <div class="col-3 offset-md-1"><%= f.label "パスワード(確認用)" %></div>
      <div class="col-3"><%= f.password_field :password_confirmation %></div>
    </div>
    <div class="row">
      <div class="col-3 offset-md-1"><%= f.label "自己紹介" %></div>
      <div class="col-3"><%= f.text_area :self_introduction, :size => "25", placeholder: "自己紹介" %></div>
    </div>
    <div class="row">
      <div class="col-3 offset-md-1"></div>
        <div class="col-1.5"></div>
        <div class="col-2"><%= f.submit "新規登録", class:"col btn btn-success" %></div>
      </div>
  <% end %>
