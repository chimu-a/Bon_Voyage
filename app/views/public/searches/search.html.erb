<div class="container">
  <div class='row'>
    <table class="table border table-hover table-inverse">
      <% if @result == [] %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% elsif @post.present? %>
      <% search_word = @q.title_cont %>
    <h2 class="mt-3">検索結果 "<%= search_word %>"</h2>
      <thead>
        <tr>
          <th>image</th>
          <th>title</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @post.each do |f| %>
          <td><%#= image_tag f.get_image(200,200), class: "image" %></td>
          <%#= link_to image_tag(post.image, width: '100', height: '100'), post_path(post) %>
          <td><%= link_to f.title, post_path(f.id) %></td>
        </tr>
        <% end %>
      <% else %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% end %>
    </table>
  </div>
</div>

