<div class="container pt-5">
  <div class="row pt-5">
  <% if @posts.present? %>
    <h2>「<%= params[:keywords] if params[:keywords].present? %>」の投稿（全<%= @posts_all.length %>件）</h2>
　</div>
　<div class="row">
      <% @posts.each do |post| %>
      <div class="col-lg-3" >
      <% if admin_signed_in? %>
        <div><%= link_to image_tag(post.image, width: '150', height: '150'), admin_post_path(post) %></div>
          <tr>
            <td><%= link_to post.title, admin_post_path(post), class: "link text-secondary" %></td>
            <td><%= link_to post.customer.user_name, admin_customer_path(post.customer), class: "link text-secondary" %></td>
          </tr>
      <% else %>
          <div><%= link_to image_tag(post.image, width: '150', height: '150'), post_path(post) %></div>
          <tr>
            <td><%= post.title %></td>
            <td><%= link_to post.customer.user_name, customer_path(post.customer), class: "link text-secondary" %></td>
          </tr>
      <% end %>
        <!--　  <%# @post_tags.each do |tag| %>-->
     　　 <!--<td> <i class="fa-sharp fa-solid fa-tag"></i>-->
        <!--<%#= link_to tag.name,search_tag_path(tag_id: tag.id) %></td>-->

         <!--<p><i class="fa-sharp fa-solid fa-tag"></i>-->
         <!--<%#= link_to post.tags.map(&:name).join(', '),search_path(tag_id: tag.id) %></p>-->
      <p>
        <% post.tags.each do |tag| %>
          <% if admin_signed_in? %>
          <i class="fa-sharp fa-solid fa-tag"></i>
              <%= link_to tag.name, admin_posts_path(tag_id: tag.id), class: "link text-secondary" %>
          <% else %>
            <i class="fa-sharp fa-solid fa-tag"></i>
              <%= link_to tag.name, posts_path(tag_id: tag.id), class: "link text-secondary" %>
          <% end %>
        <% end %>
      </p>
      </div>
      <% end %>
    </div>
      <!--<div>-->
      <!--  <%#= paginate @posts %>-->
      <!--</div>-->
  <% else %>
    <h2>一致する投稿がありませんでした。</h2>
  <% end %>
  </div>
</div>
