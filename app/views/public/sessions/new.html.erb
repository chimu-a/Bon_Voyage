<div class="container pt-5">
  <div class="row pt-5">
    <div class="col-sm-9 offset-sm-1 col-md-9 offset-md-1 col-lg-8 offset-lg-2">
      <div class="px-sm-0 mb-4">
        <h2>ログイン</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group row">
          <%= f.label "メールアドレス", class: "col-md-4" %>
          <div class="col-md-6 offset-lg-2">
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "パスワード", class: "col-md-4" %>
          <div class="col-md-6 offset-lg-2">
            <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-6 offset-md-6">
            <%= f.submit "ログイン", class:"btn btn-outline-success w-100" %>
          </div>
        </div>
      <% end %>
        <div class="row">
          <div class="col-md-5">
            <h6>会員登録がお済みでない方</h6>
          </div>
          <div class="col-md-6 offset-lg-1">
            <%= render "public/shared/links" %>
          </div>
        </div>
    </div>
  </div>
</div>
