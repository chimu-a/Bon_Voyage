<%= form_with url: url, method: :get do |form| %>
  <div class="input-group">
    <%= form.text_field :q, class: 'form-control', placeholder: t('defaults.search_word') %>
    <%= form.submit t('defaults.search_word'), class: 'btn btn-primary' %>
  </div>
<% end %>



<!--new-->
<%= f.fields_for :post_items do|post_item| %>
    <div class="row">
      <div class="col-md-6 col-sm-12 d-flex">
        <div class="d-flex pt-5">
          <div>
            <span class="bg-light">日付</span><br><%= post_item.date_field :date %>
          </div>
        </div>
        <div class="d-flex pt-5">
          <div>
            時間<br><%= post_item.time_field :time %>
          </div>
        </div>
        <div class="d-flex pt-5">
          <div>
            画像<br><%= post_item.file_field :image, accept: "image/*" %>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-sm-12 d-flex">
        <div class="d-flex pt-5">
          <div>
            場所<br><%= post_item.text_field :place %>
          </div>
        </div>
        <div class="d-flex pt-5">
          <div>
            説明<br><%= post_item.text_field :explanatory_text %>
          </div>
        </div>
        <div class="d-flex pt-5">
          <div>
            次への移動方法<br><%= post_item.select :moving_method, [["徒歩", "徒歩"], ["電車", "電車"], ["バス", "バス"], ["自転車", "自転車"], ["バイク", "バイク"], ["車", "車"], ["飛行機", "飛行機"], ["船", "船"]], include_blank: "選択して下さい" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
